{{>_navbar}}
<div id="wrapper">
  {{>_sidebar}}
<div id="page-wrapper">
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Manage Employees Data</h1>
  </div>
</div>

<div class="container col-md-12">
  <div class="panel panel-primary text-center employees-panel">
    <div class="panel-heading">
      <h1 class="panel-title">Manage Employees data</h1>
    </div>
    <div class="panel-body">

      <div class="row">
        <div class="col-md-12">
          <div class=" form-group input-group ">
            <span class="input-group-addon"><i class="fa fa-search"></i></span>
            <b><input type="text" name="" class="form-control" placeholder="search Employee" value=""></b>
          </div>
        </div>
      </div>

      <br>
      <br>


      <table class="table table-striped table-hover">
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Contact</th>
            <th>address</th>
            <th>Registration Date</th>
            <th></th>
          </tr>

            {{#each users}}
          <tr class="text-justify">
            <td>{{name}}</td>
            <td>{{email}}</td>
            <td>{{contact}}</td>
            <td>{{address}}</td>


            <td><a class="btn btn-primary btn-md" href="/admin/edit/{{id}}">Edit</a> <a href="#" class="btn btn-danger btn-md">Delete</a></td>
          </tr>
            {{/each}}
      </table>

    </div>
  </div>
</div>


</div>
</div>
