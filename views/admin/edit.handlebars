{{>_navbar}}

    <div class="container col-md-12">
      <h2 class="page-header"><a>Edit Employee Details</a></h2>
    </div>


<div class="row">

  <div class="container register">
    <div class="container profile col-md-4">
      <div class="panel panel-default">
        <div class="panel-body img">
          <img src="/img/marketplace.png" alt="">
          <hr>
          <h3>{{user.name}}</h3>
          <hr>
          <h5><a>{{user.email}}</a></h5>
        </div>
      </div>
    </div>


            <div class="col-md-6">
              <div class="panel panel-default">
                 <div class="panel-body">
               <form action="/admin/edit/{{user.id}}" method="post">
                 <h3><a>Personal details</a></h3>
                 <br>
             <div class="form-group">
               <label for="name">Name</label>
               <input type="text" name="name" value="{{user.name}}" class="form-control" placeholder="edit name..." required>
             </div>

             <div class="form-group">
               <label for="email">Email</label>
               <input type="email" name="email" value="{{user.email}}" class="form-control" placeholder="edit email..." required>
             </div>

             <div class="form-group">
               <label for="name">Contact</label>
               <input type="number" name="contact" value="{{user.contact}}" class="form-control" placeholder="edit contact..." required>
             </div>

             <div class="form-group">
               <label for="name">Address</label>
               <input type="text" name="address" value="{{user.address}}" class="form-control" placeholder="edit address..." required>
             </div>
             <button type="submit" name="button" class="btn btn-primary btn-lg btn-block"> Submit details</button>
               </div>
               </form>
             </div>
       </div>
  </div>
